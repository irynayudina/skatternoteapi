generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and user management
model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String?   // Optional for Auth0 users
  auth0Id   String?   @unique // Auth0 user ID
  picture   String?   // Auth0 profile picture
  role      String    @default("user") // user, admin, etc.
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relationships
  desktops Desktop[]
  notes    Note[]
  roadmaps Roadmap[]
  settings UserSettings?

  @@map("users")
}

// UserSettings model for user preferences
model UserSettings {
  id                Int      @id @default(autoincrement())
  userId            Int      @unique
  preferredTheme    String   @default("coldarkCold") // Default theme
  desktopBackground String?  // Desktop background image ID or null for default
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// Desktop model for workspace organization
model Desktop {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes    Note[]
  roadmaps Roadmap[]

  @@map("desktops")
}

// Note model for individual notes
model Note {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  isPinned   Boolean  @default(false)
  desktopId  Int
  userId     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relationships
  desktop Desktop    @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  user    User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags    NoteTag[]

  @@map("notes")
}

// Tag model for note categorization
model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  color     String?   // Optional color for UI customization
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relationships
  notes NoteTag[]

  @@map("tags")
}

// Junction table for many-to-many relationship between notes and tags
model NoteTag {
  id     Int @id @default(autoincrement())
  noteId Int
  tagId  Int

  // Relationships
  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([noteId, tagId])
  @@map("note_tags")
}

// Roadmap model for interactive project roadmaps
model Roadmap {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  desktopId   Int
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  desktop Desktop      @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  steps   RoadmapStep[]

  @@map("roadmaps")
}

// RoadmapStep model for individual steps in a roadmap
model RoadmapStep {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  order       Int      // Order of the step in the roadmap
  isCompleted Boolean  @default(false)
  roadmapId   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  roadmap Roadmap @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@map("roadmap_steps")
}

// Utility model for useful resources displayed on home board
model Utility {
  id          Int      @id @default(autoincrement())
  name        String   // Required: Display name of the utility
  link        String   // Required: URL to the resource
  icon        String?  // Optional: Emoji or icon character
  picture     String?  // Optional: URL to an image/icon
  image       String?  // Optional: Alternative field for image URL
  description String?  // Optional: Brief description
  orderIndex  Int      @default(0) // Order for display
  isActive    Boolean  @default(true) // Whether the utility is active
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("utilities")
}